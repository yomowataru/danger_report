<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h4>タグ一覧</h4>
    </div>
  </div>

  <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
  <div class="row mt-3">
    <div class="col-lg-5">
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :name, "タグ名" %></th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-danger' %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-lg-6">
      <table class="table table-borderless">
        <% @tags.each do |tags| %>
        <tr>
          <th></th>
          <td><%= tags.id %></td>
          <td><%= tags.name %></td>
          <td><%= link_to "編集する", edit_admin_tag_path(tags.id), class: 'btn btn-success' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>