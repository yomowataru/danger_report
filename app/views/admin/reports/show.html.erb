<div class="container mt-3">
  <div class="row">
    <h1>投稿履歴詳細</h1>
    <% if @report.is_finished == false %>
      未対応
    <% else %>
      この案件は対応済です。
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-5 text-left m-3">
      <%= image_tag @report.get_image, size: "300x300" %>
    </div>

    <div class="col-lg-5 text-left m-3">
      <div id='map'></div>

      <style>
      #map {
        height: 300px;
        width: 100%;
      }
      </style>

      <!-- js部分 -->
      <script>
      //初期マップの設定
      let map
      let marker
      function initMap(){
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
          center:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          zoom: 15,
        });

         marker = new google.maps.Marker({
          position:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          map: map
        });
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&callback=initMap" async defer></script>
    </div>

  </div>

  <div class="row">
    <% @report.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </div>

  <div class="row">
    <%= l @report.created_at %>
    <%= @report.introduction %>
  </div>



  <div>
    <div class="row">コメント一覧</div>
    <div class="row">
    <% @comments.each do |comment| %>
      <table class="table table-borderless">
        <td><%= l comment.created_at %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.customer.name %></td>
      </table>
    <% end %>
    </div>
  </div>

  <%= form_with model: @report, url: admin_report_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-lg-7 text-left">
      <table class="table table-borderless">
        <tr>
          <th><label for="status">対応ステータス</label></th>
          <td>
            <%= f.radio_button :status, 0, checked: "checked" %>
            <%= f.label :status, "未対応" %>
            <%= f.radio_button :status, 1 %>
            <%= f.label :status, "対応済" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>
</div>