<div class="container mt-3">
  <div class="row">
    <div class="col-lg-6">
      <h3>
        投稿詳細
        <% if @report.is_finished == false %>
          <span class="text-danger">（未対応）</span>
        <% else %>
          <span class="text-success">（この案件は対応済です）</span>
        <% end %>
      </h3>
    </div>
    <div class="col-lg-6">
      <p><%= link_to "管理者権限で削除する", admin_report_path(@report.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>

    </div>
  </div>

  <div class="row">
    <div class="col-lg-5 text-left m-3">
      <%= image_tag @report.get_image, size: "400x300" %>
    </div>

    <div class="col-lg-5 text-left m-3">
      <div id='map'></div>

      <style>
      #map {
        height: 300px;
        width: 100%;
      }
      </style>

      <!-- js部分 -->
      <script>
      //初期マップの設定
      let map
      let marker
      function initMap(){
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
          center:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          zoom: 15,
        });

         marker = new google.maps.Marker({
          position:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          map: map
        });
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&callback=initMap" async defer></script>
    </div>

  </div>

  <div class="row">
    <div class="col-lg-10 mx-auto">
      <table class="table my-5">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>内容</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= l @report.created_at %></td>
            <td><%= @report.introduction %></td>
            <td>
              <% @report.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


  <div>
    <div class="row mt-3">
      <div class="col-lg-10">
        <h5>コメント一覧</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <table class="table table-borderless">
          <thead>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <% @comments.each do |comment| %>
          <tbody>
            <td><%= l comment.created_at %></td>
            <td><%= comment.comment %></td>
            <td><%= comment.customer.name %></td>
            <td><%=link_to "削除", admin_report_comment_path(comment.report.id, comment.id), method: :delete %></td>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>


  <%= form_with model: @report, url: admin_report_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-lg-4 mx-auto border">
      <table class="table table-borderless">
        <tr>
          <th class="text-center"><label for="status">対応ステータス</label></th>
          <td class="text-center">
            <%= f.radio_button :status, 0, checked: "checked" %>
            <%= f.label :status, "未対応" %>
            <%= f.radio_button :status, 1 %>
            <%= f.label :status, "対応済" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td class="text-center"><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>
</div>