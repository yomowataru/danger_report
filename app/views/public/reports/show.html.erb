<div class="container mt-3">
  <!--共通テンプレート-->
  <%= render 'show', report: @report %>
  <!--ここまで-->

  <div>
    <div class="row">
      <div class="col-lg-10">
        <h5>コメントする</h5>
      </div>
    </div>
    <%= form_with(model:[@report, @comment], method: :post) do |f| %>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <%= f.text_area :comment, class: 'form-control', style: "width:40%", rows: "3" %>
        <%= f.hidden_field :report_id, value: @report.id %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-10 mx-auto">
        <%= f.submit 'コメントする' %>
      </div>
    </div>
    <% end %>
  </div>

  <div>
    <div class="row mt-5">
      <div class="col-lg-10">
        <h5>コメント一覧</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <table class="table table-borderless">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <% @comments.each do |comment| %>
          <tbody>
            <td><%= l comment.created_at %></td>
            <td><%= comment.comment %></td>
            <td><%= comment.customer.name %></td>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>

</div>