<div class="container mt-3">
  <div class="row">
    <div class="col-lg-6">
      <h3>
        投稿詳細
        <% if @report.is_finished == false %>
          <span class="text-danger">（未対応）</span>
        <% else %>
          <span class="text-success">（この案件は対応済です）</span>
        <% end %>
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5 text-left mt-3 mx-auto">
      <%= image_tag @report.get_image, size: "400x300" %>
    </div>

    <div class="col-lg-5 text-left mt-3 mx-auto">
      <div id='map'></div>

      <style>
      #map {
        height: 300px;
        width: 100%;
      }
      </style>

      <!-- js部分 -->
      <script>
      //初期マップの設定
      let map
      let marker
      function initMap(){
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
          center:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          zoom: 15,
        });

         marker = new google.maps.Marker({
          position:  {lat: <%= @report.lat %>, lng: <%= @report.lng %>},
          map: map
        });
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&callback=initMap" async defer></script>
    </div>

  </div>


  <div class="row">
    <div class="col-lg-10 mx-auto">
      <table class="table my-5">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>内容</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= l @report.created_at %></td>
            <td><%= @report.introduction %></td>
            <td>
              <% @report.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <div class="row">
      <div class="col-lg-10">
        <h5>コメントする</h5>
      </div>
    </div>
    <%= form_with(model:[@report, @comment], method: :post) do |f| %>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <%= f.text_area :comment, class: 'form-control', style: "width:40%", rows: "3" %>
        <%= f.hidden_field :report_id, value: @report.id %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-10 mx-auto">
        <%= f.submit 'コメントする' %>
      </div>
    </div>
    <% end %>
  </div>

  <div>
    <div class="row mt-5">
      <div class="col-lg-10">
        <h5>コメント一覧</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <table class="table table-borderless">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <% @comments.each do |comment| %>
          <tbody>
            <td><%= l comment.created_at %></td>
            <td><%= comment.comment %></td>
            <td><%= comment.customer.name %></td>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>

</div>