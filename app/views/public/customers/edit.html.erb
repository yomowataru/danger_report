<div class="container mt-3">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>
  
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-lg-7 text-left">
      <table class="table table-borderless">
        <tr>
          <td><label for="inputName">氏名</label></td>
          <td><%= f.text_field :name, autofocus: true, id:"inputName" %></td>
        </tr>
        <tr>
          <td><label for="inputEmail">メールアドレス</label></td>
          <td><%= f.text_field :email, autofocus: true, id:"inputEmail" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>
</div>